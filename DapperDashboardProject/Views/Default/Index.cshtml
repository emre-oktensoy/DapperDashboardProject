            <div class="animated fadeIn">
                <!-- Widgets  -->
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-1">
                                        <i class="pe-7s-cash"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-text"><span class="count">@((Model.TotalRevenue?.TotalRevenue ?? 0).ToString("N2"))</span></div>
                                            <div class="stat-heading">Toplam Gelir </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-2">
                                        <i class="pe-7s-cart"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-text"><span class="count">@Model.TotalSales.TotalSalesCount.ToString("N0")</span></div>
                                            <div class="stat-heading">Satılan Araç Sayısı</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-3">
                                        <i class="pe-7s-browser"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-text"><span class="count">@Model.TopModel.CarMake (@Model.TopModel.SaleCount.ToString("N0") Adet)</span></div>
                                            <div class="stat-heading">En Çok Satılan Model</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-4">
                                        <i class="pe-7s-users"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-text"><span class="count">@Model.LastSale.CarMake - @Model.LastSale.SalePrice.ToString("N2")</span></div>
                                            <div class="stat-heading">Son Satış</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Widgets -->
                <!--  Traffic  -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="box-title">Satış Grafiği </h4>
                            </div>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="card-body">
                                        <canvas id="traffic-chart"></canvas>

                                        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                                        <script>
                                            var monthlyLabels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlySales.Select(m => m.SaleMonth + " " + m.SaleYear)));
                                            var monthlyCounts = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlySales.Select(m => m.TotalCount)));

                                            new Chart(document.getElementById('traffic-chart'), {
                                                type: 'bar',
                                                data: {
                                                    labels: monthlyLabels,
                                                    datasets: [{
                                                        label: 'Satılan Araç Sayısı',
                                                        data: monthlyCounts,
                                                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                                                        borderColor: 'rgba(54, 162, 235, 1)',
                                                        borderWidth: 1
                                                    }]
                                                },
                                                options: {
                                                    responsive: true,
                                                    scales: {
                                                        y: {
                                                            beginAtZero: true,
                                                            ticks: { precision: 0 }
                                                        }
                                                    }
                                                }
                                            });
                                        </script>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="card-body">

                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">Bay Müşteri Sayısı</h4>
                                            <div class="por-txt">@Model.GenderProgress.MaleCount Müşteri (@Model.GenderProgress.MalePercentage%)</div>
                                            <div class="progress mb-2" style="height: 5px;">
                                                <div class="progress-bar bg-primary" role="progressbar"
                                                     style="width: @Model.GenderProgress.MalePercentage%;"
                                                     aria-valuenow="@Model.GenderProgress.MalePercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>

                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">Bayan Müşteri Sayısı</h4>
                                            <div class="por-txt">@Model.GenderProgress.FemaleCount Müşteri (@Model.GenderProgress.FemalePercentage%)</div>
                                            <div class="progress mb-2" style="height: 5px;">
                                                <div class="progress-bar bg-flat-color-1" role="progressbar"
                                                     style="width: @Model.GenderProgress.FemalePercentage%;"
                                                     aria-valuenow="@Model.GenderProgress.FemalePercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>

                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">En Çok Satılan Araba Oranı</h4>
                                            <div class="por-txt">@Model.TopCarMake.Name (@Model.TopCarMake.Percentage%)</div>
                                            <div class="progress mb-2" style="height: 5px;">
                                                <div class="progress-bar bg-flat-color-2" role="progressbar"
                                                     style="width: @Model.TopCarMake.Percentage%;"
                                                     aria-valuenow="@Model.TopCarMake.Percentage" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">En Çok Satılan Model Oranı</h4>
                                            <div class="por-txt">@Model.TopCarModel.Name (@Model.TopCarModel.Percentage%)</div>
                                            <div class="progress mb-2" style="height: 5px;">
                                                <div class="progress-bar bg-flat-color-3" role="progressbar"
                                                     style="width: @Model.TopCarModel.Percentage%;"
                                                     aria-valuenow="@Model.TopCarModel.Percentage" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">En Çok Satış Yapılan Şehir Oranı</h4>
                                            <div class="por-txt">@Model.TopRegion.Name (@Model.TopRegion.Percentage%)</div>
                                            <div class="progress mb-2" style="height: 5px;">
                                                <div class="progress-bar bg-flat-color-4" role="progressbar"
                                                     style="width: @Model.TopRegion.Percentage%;"
                                                     aria-valuenow="@Model.TopRegion.Percentage" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                        </div>
                                    </div> <!-- /.card-body -->
                                </div>
                            </div> <!-- /.row -->
                            <div class="card-body"></div>
                        </div>
                    </div><!-- /# column -->
                </div>
                <!--  /Traffic -->
                <div class="clearfix"></div>
                <!-- Orders -->
                <div class="orders">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="box-title">En Çok Satış Yapılan Müşteriler </h4>
                                </div>
                                <div class="card-body--">
                                    <div class="table-stats order-table ov-h">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th class="serial">#</th>
                                                    <th>Müşteri</th>
                                                    <th>Yaş</th>
                                                    <th>Şehir</th>
                                                    <th>Adet</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.TopCustomers.Select((value, index) => new { value, index }))
                                                {
                                                    <tr>
                                                        <td class="serial">@((item.index + 1)).</td>
                                                        <td><span class="name">@item.value.CustomerName</span></td>
                                                        <td><span class="count">@item.value.CustomerAge</span></td>
                                                        <td><span class="product">@item.value.SalesRegion</span></td>
                                                        <td><span class="count">@item.value.PurchaseCount</span></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>

                                    </div> <!-- /.table-stats -->
                                </div>
                            </div> <!-- /.card -->
                        </div>  <!-- /.col-lg-8 -->
                        <div class="col-xl-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="box-title">Haberler </h4>
                                </div>
                                <div class="card-body--">
                                    @Html.Partial("__NewsListPartial", Model.NewsList)
                            </div> <!-- /.card -->
                        </div>
                        
                    </div>
                </div>
                <!-- /.orders -->
                <!-- To Do and Live Chat -->
                <div class="row">
                    <div class="col-lg-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title box-title">
                                    Marka Bazlı Satış Dağılımı
                                </h4>
                                <div class="card-content">

                                    @{
                                        var labels = Model.CarMakeCount.Select(x => x.CarMake).ToList();
                                        var values = Model.CarMakeCount.Select(x => x.SaleCount).ToList();
                                        var colors = Enumerable.Range(0, labels.Count)
                                        .Select(i => $"hsl({i * 30 % 360}, 70%, 60%)").ToList();
                                    }

                                    <div class="dashboard-box" style="height:350px" ;>
                                        <canvas id="carMakePieChart"></canvas>
                                    </div>

                                    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                                    <script>
                                        const ctx = document.getElementById('carMakePieChart').getContext('2d');

                                        const carMakePieChart = new Chart(ctx, {
                                            type: 'pie',
                                            data: {
                                                labels: @Html.Raw(Json.Serialize(labels)),
                                                datasets: [{
                                                    label: 'Marka Bazlı Satış',
                                                    data: @Html.Raw(Json.Serialize(values)),
                                                    backgroundColor: @Html.Raw(Json.Serialize(colors)),
                                                    borderWidth: 1
                                                }]
                                            },
                                            options: {
                                                responsive: true,
                                                plugins: {
                                                    legend: {
                                                        position: 'right',
                                                        align: 'center',
                                                        labels: {
                                                            boxWidth: 20,
                                                            padding: 10
                                                        }
                                                    },
                                                    tooltip: {
                                                        callbacks: {
                                                            label: function(context) {
                                                                let label = context.label || '';
                                                                let value = context.raw || 0;
                                                                let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                                                let percentage = ((value / total) * 100).toFixed(1);
                                                                return `${label}: ${value} satış (%${percentage})`;
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        });
                                    </script>
                                </div>
                            </div> <!-- /.card-body -->
                        </div><!-- /.card -->
                    </div>

                    <div class="col-lg-7">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title box-title">En Çok Satış Yapan 15 Personel</h4>
                                <div class="card-content">

                                    @{
                                        var top15 = Model.SalesPersonCount
                                        .OrderByDescending(x => x.SaleCount)
                                        .Take(15)
                                        .ToList();

                                        var _labels = top15.Select(x => x.SalesPerson).ToList();
                                        var _values = top15.Select(x => x.SaleCount).ToList();
                                        var _colors = Enumerable.Range(0, labels.Count)
                                        .Select(i => $"hsl({i * 24 % 360}, 70%, 60%)").ToList();
                                    }

                                    <div class="dashboard-box" style="height:350px;">
                                        <canvas id="salesPersonVerticalBarChart"></canvas>
                                    </div>
                                    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                                    <script>
                                        const ctx5 = document.getElementById('salesPersonVerticalBarChart').getContext('2d');

                                        const salesPersonVerticalBarChart = new Chart(ctx5, {
                                            type: 'bar',
                                            data: {
                                                labels: @Html.Raw(Json.Serialize(_labels)),
                                                datasets: [{
                                                    label: 'Satış Adedi',
                                                    data: @Html.Raw(Json.Serialize(_values)),
                                                    backgroundColor: @Html.Raw(Json.Serialize(_colors)),
                                                    borderWidth: 1
                                                }]
                                            },
                                            options: {
                                                responsive: true,
                                                maintainAspectRatio: false,
                                                plugins: {
                                                    legend: { display: false },
                                                    tooltip: {
                                                        callbacks: {
                                                            label: function(context) {
                                                                return `${context.label}: ${context.raw} satış`;
                                                            }
                                                        }
                                                    }
                                                },
                                                scales: {
                                                    x: {
                                                        ticks: {
                                                            autoSkip: false,
                                                            maxRotation: 45,
                                                            minRotation: 30
                                                        },
                                                        title: { display: true, text: 'Personel' }
                                                    },
                                                    y: {
                                                        beginAtZero: true,
                                                        title: { display: true, text: 'Satış Adedi' },
                                                        min: Math.min(...@Html.Raw(Json.Serialize(_values))) - 10,
                                                        max: Math.max(...@Html.Raw(Json.Serialize(_values))) + 10,
                                                        ticks: {
                                                                stepSize: 5 // Küçük farkları göstermek için
                                                            }
                                                    }
                                                }
                                            }
                                        });
                                    </script>
                                </div><!-- /.messenger-box -->
                            </div>
                        </div> <!-- /.card-body -->
                    </div><!-- /.card -->
                </div>
            </div>
            <!-- /To Do and Live Chat -->
            <!-- Calender Chart Weather  -->
            
            <!-- /Calender Chart Weather -->
